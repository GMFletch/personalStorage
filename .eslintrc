{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "eqeqeq": "warn",
    "no-const-assign": "warn",
    "no-case-declarations": "warn",
    "no-else-return": "warn",
    "no-global-assign": "warn",
    "no-mixed-operators": "warn",
    "no-nested-ternary": "warn",
    "no-redeclare": "warn",
    "no-undef": "error",
    "no-unneeded-ternary": "warn",
    "no-unused-vars": [
      "off",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true,
        "varsIgnorePattern": "ggbOnInit"
      }
    ],
    "no-useless-escape": "warn",
    "no-var": "warn",
    "nonblock-statement-body-position": "warn",
    "prefer-const": "warn",
    "spaced-comment": "warn"
  },
  "globals": {
    "components": "readonly",
    "slide": "readonly",
    "utils": "readonly",
    "didUtils": "readonly",
    "autorun": "readonly",
    "controls": "readonly",
    "getFromSlide": "readonly",
    "window": "readonly",
    "document": "readonly",
    "ggbApplet": "readonly"
  }
}
