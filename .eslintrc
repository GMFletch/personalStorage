{
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "env": {
    "es6": true
  },
  "extends": ["prettier"],
  "plugins": ["prettier"],

  "rules": {
    "no-const-assign": "warn",
    "no-global-assign": "warn",
    "no-redeclare": "warn",
    "no-undef": "warn",
    "no-unused-vars": [
      "off",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "no-useless-escape": "warn",
    "no-var": "warn",
    "prefer-const": "warn",
    "prettier/prettier": ["warn"]
  },
  "globals": {
    "autorun": "readonly",
    "components": "readonly",
    "console": "readonly",
    "controls": "readonly",
    "didUtils": "readonly",
    "document": "readonly",
    "getFromSlide": "readonly",
    "ggbApplet": "readonly",
    "slide": "readonly",
    "utils": "readonly",
    "window": "readonly"
  }
}
